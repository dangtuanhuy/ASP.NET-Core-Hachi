@model IEnumerable<Hachi.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Sub Category</h2>
<br />
@Html.Partial("_ButtonPartial")
<div class="form-border">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.SubCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category.CategoryName)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(m => item.SubCategoryName);</td>
                <td> @Html.DisplayFor(m => item.Category.CategoryName);</td>
                <td>@Html.Partial("_ButtonCategory",item.Id)</td>
            </tr>
        }
    </table>
</div>

